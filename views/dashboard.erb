  <div class="medium-6 columns">
    <div class="callout primary">
      <h3>Location</h3>
      <p>
        <%= @geolocation.city %>,
        <%= @geolocation.state %>,
        <%= @geolocation.country %>
      </p>
    </div>
  </div>

  <div class="medium-6 columns">
    <div class="callout primary">
      <h3>Weather</h3>
      <p>
        <li>
        Summary: <%= @weather_data["summary"] %>
        </li>
        <li>Temperature (Â°F): <%= @weather_data["temperature"] %></li>
